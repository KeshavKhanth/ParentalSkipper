<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AssemblyTitle>Parental Skipper</AssemblyTitle>
    <Product>Parental Skipper</Product>
    <Copyright>Copyright Â© 2024</Copyright>
    <Version>1.0.0.0</Version>
    <Authors>Jules</Authors>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <!-- Dependencies usually provided by Jellyfin at runtime -->
    <!-- In a real env, we would reference Jellyfin.Controller, Jellyfin.Model, MediaBrowser.Common -->
    <PackageReference Include="Jellyfin.Model" Version="10.8.13" />
    <PackageReference Include="Jellyfin.Controller" Version="10.8.13" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\configPage.html" />
    <EmbeddedResource Include="Client\parental-skipper.js" />
  </ItemGroup>

</Project>
